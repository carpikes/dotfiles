source ~/.vimrc
set guifont="Menlo 15"
colorscheme lucius
set background=light
LuciusLight
set guioptions-=m
set guioptions-=T
set guioptions-=L
set guioptions-=l
let g:EclimInfoHighlight = 'Statement'
let g:EclimWarningHighlight = 'WarningMsg'
let g:EclimErrorHighlight = 'Error' 
let g:EclimQuickfixSignText = '> '
let g:EclimLoclistSignText = '>>' 
set backspace=2
